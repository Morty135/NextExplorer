<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 30px; }
    h1 { margin-bottom: 10px; }
    h2 { margin-top: 40px; }
    table { width: 100%; border-collapse: collapse; margin-top: 10px; }
    th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
    .topbar { margin-bottom: 20px; }
  </style>
</head>
<body>

  <div class="topbar">
    <h1>Admin Dashboard</h1>
    <p>Logged in as <strong><%= admin.username %></strong></p>
    <a href="/logout">Logout</a>
  </div>

  <% if (success) { %>
    <div style="padding:10px; background:#d4edda; color:#155724; border:1px solid #c3e6cb; margin-bottom:10px;">
      <%= success %>
    </div>
  <% } %>

  <% if (error) { %>
    <div style="padding:10px; background:#f8d7da; color:#721c24; border:1px solid #f5c6cb; margin-bottom:10px;">
      <%= error %>
    </div>
  <% } %>

  <!-- Add miner -->
  <h2>Add Miner</h2>
  <form action="/addminer" method="POST" style="margin-bottom:20px;">
    <label>Username:</label>
    <input type="text" name="username" required>

    <label>Password:</label>
    <input type="password" name="password" required>

    <button type="submit">Add Miner</button>
  </form>

  <!-- Delete miner -->
  <h2>Delete Miner</h2>
  <form action="/deleteminer" method="POST">
    <label>Username:</label>
    <input type="text" name="username" required>

    <button type="submit" style="background:#d9534f; color:white;">Delete Miner</button>
  </form>

  <!-- list of miners -->
  <h2>Miners</h2>
  <table>
    <thead>
      <tr>
        <th>Miner Username</th>
        <th>Hashrate</th>
        <th>Last Share</th>
      </tr>
    </thead>
    <tbody>
      <% miners.forEach(m => { %>
        <tr>
          <td><%= m.username %></td>
          <td><%= m.hashrate || "0 H/s" %></td>
          <td><%= m.lastShare || "N/A" %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
