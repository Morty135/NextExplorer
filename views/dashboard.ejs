<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 30px; }
    h1 { margin-bottom: 10px; }
    h2 { margin-top: 40px; }
    table { width: 100%; border-collapse: collapse; margin-top: 10px; }
    th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
    .topbar { margin-bottom: 20px; }
  </style>
</head>
<body>

  <div class="topbar">
    <h1>Admin Dashboard</h1>
    <p>Logged in as <strong><%= admin.username %></strong></p>
    <a href="/logout">Logout</a>
  </div>

  <!-- MINERS -->
  <h2>Miners</h2>
  <table>
    <thead>
      <tr>
        <th>Miner Username</th>
        <th>Hashrate</th>
        <th>Last Share</th>
      </tr>
    </thead>
    <tbody>
      <% miners.forEach(m => { %>
        <tr>
          <td><%= m.username %></td>
          <td><%= m.hashrate || "0 H/s" %></td>
          <td><%= m.lastShare || "N/A" %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- WORKERS -->
  <h2>Workers</h2>
  <table>
    <thead>
      <tr>
        <th>Worker Name</th>
        <th>Miner</th>
        <th>Hashrate</th>
        <th>Last Share</th>
      </tr>
    </thead>
    <tbody>
      <% workers.forEach(w => { %>
        <tr>
          <td><%= w.name %></td>
          <td><%= w.miner %></td>
          <td><%= w.hashrate || "0 H/s" %></td>
          <td><%= w.lastShare || "N/A" %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- SHARES -->
  <h2>Shares</h2>
  <table>
    <thead>
      <tr>
        <th>Miner</th>
        <th>Worker</th>
        <th>Difficulty</th>
        <th>Accepted</th>
        <th>Timestamp</th>
      </tr>
    </thead>
    <tbody>
      <% shares.forEach(s => { %>
        <tr>
          <td><%= s.miner %></td>
          <td><%= s.worker %></td>
          <td><%= s.difficulty %></td>
          <td><%= s.accepted ? "Yes" : "No" %></td>
          <td><%= new Date(s.timestamp).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
